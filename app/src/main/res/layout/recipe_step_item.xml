<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/short_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_xs"
        android:paddingRight="@dimen/margin_xs"
        android:paddingTop="@dimen/margin_m"
        android:paddingBottom="@dimen/margin_m"
        android:gravity="center"
        android:layout_toLeftOf="@+id/thumbnail"
        tools:text="Recipe Introduction"
        android:background="@drawable/item_selector"
        android:layout_toStartOf="@+id/thumbnail" />

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/margin_xxxl"
        android:layout_height="@dimen/margin_xxxl"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingTop="@dimen/margin_xxs"
        android:background="@color/white"
        android:src="@mipmap/ic_launcher" />

    <include
        layout="@layout/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/short_description" />

</RelativeLayout>